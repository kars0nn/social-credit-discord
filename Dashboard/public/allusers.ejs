<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./static/styles/stylea.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>leaderboard</title>
</head>
<body style="background: #111820;">
  <hr>
  <div class="container">
    <a href="/users">users</a> <i>or</i> <a href="/appeal">dashboard</a>
  </div>
    <br>
    <button onclick="topFunction()" id="myBtn" title="Go to top">/\</button>
    <div class="container">
        <div class="container" style="text-align: center; border-radius: 20px; color: blueviolet;">
            <div style="overflow-x:auto;">
                <table>
                    <tr>
                        <% for (let i = 0; i < users.length; i++) { %>
                            <p style="background-color: black; padding: 10px; margin: 0px;">
                                #<%= i + 1 %>. <img src="<%=users[i].url%>" style="border-radius: 100px; width: 25px; height: 25px; margin-bottom: 4px; margin-right: 3px;"> <%= users[i].username %>
                            </p>
                        <% } %>
                    </tr>
                </table>
              </div>
        </div>
    </div>
    <br>
    <br>
</body>
<script>
    //Get the button:
mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0; // For Safari
  document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
}
</script>
</html>